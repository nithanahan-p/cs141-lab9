Q-6)int countEven(int arr[],int n){
       int k=0;
       for(int i=0;i<n;i++){
         if(arr[i]%2==0){
         k=k+1;}
       return k;
       }
     int main(){
       int arr[5]={1,2,4,6,9};
       countEven(arr,5);
return 0;
}
  
Q-8)void myStrLen(char arr[])
   {char *p;int n=0;
    p=arr;
    while(*p!='\0')
    {n++;p++;}
   return n;
  } 
  //n is the length of string
Q-9)#include<iostream>
using namespace std;
int fstrchr(char a[],char c)
  {
	char *p;
	p=a;
	while(*p!='\0')
	{
		if(*p==c){
		cout<<"true"<<endl;}
	return 0;
  }   
         
int main(){
	char a[3]={'a','b','c'};
	fstrchr(a,'c');
} 
