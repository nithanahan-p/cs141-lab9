Q-7)double *maximum(double a[],int size)
  {double *d,max=0;
   if(size==0)
    {d=NULL;
    return d;}
   for(int i=0;i<size;i++)
   { if(a[i]>max)
    { max=a[i];d=&a[i]}}
   return d;
  }
Q-10)void revstring(char a[])
   {
	char *p,*m;int i=0;
	while(a[i]!='\0')
	i++;
	m=&a[i-1];
	while(*m!=a[0])
	{	
		cout<<*m;
		m--;
	}
	cout<<" "<<*m;
	cout<<"\n";
	return 0;
   }
